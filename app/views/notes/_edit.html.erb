<% form_for( [step, note], :url => step_note_path(step) ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :note %><br/>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit 'Update note' %>
  </p>
<% end %>

<p>attach an image</p>
<% form_for [step,note],
     :url => upload_step_note_path(step), 
     :html => { :multipart => true, :method => 'post',
       :class => 'inplace_upload_image'} do |f| %>
<p><%= f.file_field :image_file %>  <%= f.submit 'Upload' %></p>
<% end %>

<a class="btn-note-edit-cancel " href"#">Cancel edit</a>
