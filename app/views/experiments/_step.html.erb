<div class="step">
  <span class="step_view">
	  <p><b>Step <%=h " #{ step.step_order }" %>  :</b></br> 
	  <%= step.title %></p>
	  <p><%= image_tag step_image_path( step.image ) %></p>
	  <p class= 'description'  ><%=h step.description %>
	  </p>
  </span>
  <!-- trying out differen for m -->
  <span class="step_form">
	  <% remote_form_for([@experiment, step],:url=>{:controller => experiment_step_path(@experiment,step) }, :html => { :method => :put, :id => "stepForm" , :multipart => true} ) do |f| %>
	<%= f.error_messages %>
	<p>Description:</p> 
	<p><%= f.text_area :description %></p>
	<p><%= f.submit 'Update' %></p>
    <% end %>
  </span>
</div>


