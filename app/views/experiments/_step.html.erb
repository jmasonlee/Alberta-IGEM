<div class="stepView">
	<p>	
	<b>Step <%=h " #{ step.step_order }" %>  :</b></br> <%= step.title %></br></p>
	<div class = edit_area id= <%= step.id  %> item_id= <%= step.id %> name= 'Step' update_url=<%= experiment_step_path(@experiment, step)  %>   
	><%= step.description %> 	</div>
</div>
<!-- trying out differen for m -->
<% remote_form_for([@experiment, step],:url=>{:controller => experiment_step_path(@experiment,step) }, :html => { :method => :put, :id => 'step_form', :multipart => true} ) do |f| %>
	<%= f.error_messages %>
	<p>Description:</p> 
	<p><%= f.text_area :description %></p>
	<p><%= f.submit 'Update' %></p>
<% end %>

